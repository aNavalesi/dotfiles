[net]
label=SSID: 
command=echo "$(LANG=C nmcli d | grep connected  | awk '{print $4}')"
color=#e07221
interval=5
separator=true



[disk]
label=/
instance=/
command=~/.config/i3blocks/./disk.sh
color=#96c6f8
interval=30


[battery-plus]
command=/home/andrea/.config/i3blocks/battery.sh
markup=pango
instance=BAT0
interval=30

[volume-pulseaudio]
label=Vol:
command=~/.config/i3blocks/./volume.sh
color=#208273
