[kernel]
command=uname -r
label=
interval=20
color=#ffffff

[net]
label= 
command=echo "$(LANG=C nmcli d | grep connected  | awk '{print $4}')"
color=#e07221
interval=5
separator=true

[temperature]
command=cat /sys/class/thermal/thermal_zone1/temp
label=
interval=5
color=#f5f40a

[disk]
label=
instance=/
command=~/.config/i3blocks/./disk.sh
color=#96c6f8
interval=30


[battery]
label=
command=cat /sys/class/power_supply/BAT0/capacity
interval=30



[volume-pulseaudio]
label=
command=~/.config/i3blocks/./volume.sh
color=#208273
instance=Master
interval=1

[logout]
full_text=
color=#ff000
command= i3-msg exit


[time]
label=
instance=nc
TZ=Europe/Rome
command=date
interval=5
